

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="edu.rosehulman.rafinder.controller.HomeFragmentSubsectionMyHallRAs">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/hall_ra"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_weight=".9"
                android:layout_marginLeft="10dp" />

            <ToggleButton
                android:textOn=""
                android:textOff=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/myHallexpander"
                android:layout_weight=".1"
                android:layout_marginRight="20dp"
                android:background="@drawable/expander_close_holo_light"
                android:checked="true" />
        </LinearLayout>

        <ListView
            android:id="@+id/myHallRAsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6" />

    </LinearLayout>

