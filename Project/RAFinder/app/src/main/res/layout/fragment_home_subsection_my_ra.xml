    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="edu.rosehulman.rafinder.controller.HomeFragmentSubsectionMyRA"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/my_ra"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_weight=".9"
                android:layout_marginLeft="10dp" />

            <ToggleButton
                android:textOn=""
                android:textOff=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/myRAexpander"
                android:layout_weight=".1"
                android:layout_marginRight="20dp"
                android:background="@drawable/expander_close_holo_light"
                android:checked="true" />
        </LinearLayout>

        <ListView
            android:id="@+id/myRAView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6" />


    </LinearLayout>

